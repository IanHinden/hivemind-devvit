{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "how-hivemind-r-u",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "inline": true,
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "http": {
      "enable": true,
      "domains": ["reddit.com", "www.reddit.com", "v.redd.it"]
    },
    "reddit": {
      "enable": true,
      "asUser": ["SUBMIT_COMMENT", "SUBSCRIBE_TO_SUBREDDIT"]
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "how-hivemind-r-u",
        "location": "subreddit",
        "forUserType": "user",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-post": {
        "endpoint": "/internal/scheduled/daily-post",
        "cron": "0 16 * * *"
      }
    }
  },
  "dev": {
    "subreddit": "how_hivemind_r_u_dev"
  }
}
